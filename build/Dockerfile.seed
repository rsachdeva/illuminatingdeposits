# Runs from root directory of the app for build context

FROM golang:1.15.0-alpine AS build
WORKDIR /illuminatingdeposits
COPY go.mod .
RUN go mod download
COPY internal/ ./internal/
COPY tools/dbcli ./tools/dbcli
WORKDIR /illuminatingdeposits/tools/dbcli
RUN go build

FROM alpine
RUN apk update
RUN apk add bash
WORKDIR /tools
COPY --from=build /illuminatingdeposits/tools/dbcli .